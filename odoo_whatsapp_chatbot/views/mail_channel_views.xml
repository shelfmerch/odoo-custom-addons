<?xml version="1.0" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="wa_mail_message_view_form_inherit_1">
            <field name="name">wa.mail.message.view.form.inherit</field>
            <field name="model">mail.message</field>
            <field name="inherit_id" ref="mail.mail_message_view_form" />
            <field name="arch" type="xml">
                <field name="is_internal" position="after">
                    <field name="wa_chatbot_id" />
                </field>
            </field>
        </record>

        <record id="discuss_channel_view_form_inherit" model="ir.ui.view">
            <field name="name">discuss.channel.form.view.inherited</field>
            <field name="model">discuss.channel</field>
            <field name="inherit_id" ref="mail.discuss_channel_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='description']" position="after">
                    <field name="wa_chatbot_id" />
                    <field name="is_chatbot_ended" invisible="1" />
                </xpath>
            </field>
        </record>

        <record id="wa_discuss_channel_view_tree" model="ir.ui.view">
            <field name="name">wa.discuss.channel.tree</field>
            <field name="model">discuss.channel</field>
            <field name="arch" type="xml">
                <tree
                    string="WA Chatbot History"
                    create="false"
                    default_order="create_date desc"
                >
                    <field name="create_date" string="Session Date" />
                    <field name="name" string="Attendees" />
                    <field name="message_ids" string="# Messages" />
                    <field name="wa_chatbot_id" />
                </tree>
            </field>
        </record>

        <record id="wa_discuss_channel_view_form" model="ir.ui.view">
            <field name="name">wa.discuss.channel.form</field>
            <field name="model">discuss.channel</field>
            <field name="arch" type="xml">
                <form string="Session Form" create="false" edit="false">
                    <sheet>
                        <div style="width:50%" class="float-start">
                            <group>
                                <field name="name" string="Attendees" />
                                <field
                                    name="create_date"
                                    readonly="1"
                                    string="Session Date"
                                />
                                <field name="wa_chatbot_id" />
                            </group>
                        </div>
                        <group class="o_history_container">
                            <div
                                class="o_history_kanban_container w-100 p-3"
                                colspan="2"
                            >
                                <div class="o_history_kanban_sub_container">
                                    <field
                                        name="message_ids"
                                        mode="kanban"
                                        domain="[('wa_chatbot_id', '=', 1)]"
                                    >
                                        <kanban default_order="create_date DESC">
                                            <field name="author_id" />
                                            <field name="body" />
                                            <field name="create_date" />
                                            <field name="id" />
                                            <field name="author_avatar" />
                                            <field name="wa_chatbot_id" />
                                            <templates>
                                                <t t-name="kanban-box">
                                                    <div class="oe_module_vignette">
                                                        <div class="o_kanban_image">
                                                            <div>
                                                                <t
                                                                    t-if="record.author_avatar.raw_value"
                                                                >
                                                                    <img
                                                                        t-att-src="kanban_image('mail.message', 'author_avatar', record.id.raw_value)"
                                                                        alt="Avatar"
                                                                        class="o_image_64_cover rounded-circle"
                                                                    />
                                                                </t>
                                                                <t t-else="">
                                                                    <img
                                                                        alt="Anonymous"
                                                                        src="/mail/static/src/img/smiley/avatar.jpg"
                                                                        class="o_image_64_cover rounded-circle"
                                                                    />
                                                                </t>
                                                            </div>
                                                        </div>
                                                        <div class="oe_module_desc">
                                                            <div class="float-end">
                                                                <p>
                                                                    <field
                                                                        name="date"
                                                                    />
                                                                </p>
                                                            </div>
                                                            <div>
                                                                <p>
                                                                    <strong>
                                                                        <t
                                                                            t-if="record.author_id.raw_value"
                                                                        >
                                                                            <field
                                                                                name="author_id"
                                                                            />
                                                                        </t>
                                                                        <t
                                                                            t-else=""
                                                                        >Anonymous</t>
                                                                    </strong>
                                                                </p>
                                                                <p>
                                                                    <t
                                                                        t-if="record.body.raw_value"
                                                                    >
                                                                        <field
                                                                            name="body"
                                                                            widget="html"
                                                                        />
                                                                        <br />
                                                                    </t>
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </t>
                                            </templates>
                                        </kanban>
                                    </field>
                                </div>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record
            id="discuss_channel_action_from_whatsapp_chatbot"
            model="ir.actions.act_window"
        >
            <field name="name">Channels</field>
            <field name="res_model">discuss.channel</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('wa_chatbot_id', 'in', [active_id])]</field>
            <field name="context">{
                'search_default_wa_chatbot_channel_id': [active_id],
                'default_wa_chatbot_channel_id': active_id,
                }
            </field>
        </record>
        <record
            id="mail_channel_action_wa_chatbot_tree"
            model="ir.actions.act_window.view"
        >
            <field name="sequence">1</field>
            <field name="view_mode">tree</field>
            <field
                name="view_id"
                ref="odoo_whatsapp_chatbot.wa_discuss_channel_view_tree"
            />
            <field
                name="act_window_id"
                ref="odoo_whatsapp_chatbot.discuss_channel_action_from_whatsapp_chatbot"
            />
        </record>

         <record
            id="mail_channel_action_wa_chatbot_form"
            model="ir.actions.act_window.view"
        >
            <field name="sequence">2</field>
            <field name="view_mode">form</field>
            <field
                name="view_id"
                ref="odoo_whatsapp_chatbot.wa_discuss_channel_view_form"
            />
            <field
                name="act_window_id"
                ref="odoo_whatsapp_chatbot.discuss_channel_action_from_whatsapp_chatbot"
            />
        </record>

        <record model="ir.cron" id="mail_channel_chatbot_active">
            <field name="name">Chatbot Activate</field>
            <field name="model_id" ref="mail.model_discuss_channel" />
            <field name="state">code</field>
            <field name="code">model.chatbot_activate()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True" />
        </record>


    </data>
</odoo>
