<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="interactive_list_view_form" model="ir.ui.view">
            <field name="name">interactive.list.title.name</field>
            <field name="model">interactive.list.title</field>
            <field name="arch" type="xml">
                <form string="List">
                    <sheet>
                        <group>
                            <field name="main_title"/>
                            <field name="component_id" invisible="1"/>
                            <field name="title_ids">
                                <tree editable="bottom">
                                    <field name="title"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>