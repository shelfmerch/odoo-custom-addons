<odoo>
    <record id="module_whatsapp_category" model="ir.module.category">
        <field name="name">Whatsapp</field>
        <field name="sequence">18</field>
    </record>

    <record id="module_quotation_whatsapp_category" model="ir.module.category">
        <field name="name">Whatsapp</field>
        <field name="sequence">19</field>
    </record>

    <record id="whatsapp_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="tus_meta_whatsapp_base.module_whatsapp_category"/>
    </record>

    <record id="whatsapp_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="tus_meta_whatsapp_base.module_whatsapp_category"/>
        <field name="implied_ids" eval="[(4,ref('tus_meta_whatsapp_base.whatsapp_group_user')),(4, ref('base.group_user'))]"/>
    </record>

     <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4,ref('tus_meta_whatsapp_base.whatsapp_group_user'))]"/>
    </record>

    <record id="base.user_admin" model="res.users">
        <field name="groups_id" eval="[(4, ref('tus_meta_whatsapp_base.whatsapp_group_manager'))]"/>
    </record>

    <record id="mail_channel_whatsapp_user_rule" model="ir.rule">
        <field name="name">Mail.channel: access only public and joined groups for whatsapp user</field>
        <field name="model_id" ref="mail_group.model_mail_group"/>
        <field name="groups" eval="[Command.link(ref('tus_meta_whatsapp_base.whatsapp_group_user'))]"/>
        <field name="domain_force">['|', '|',
        ('access_mode', '=', 'public'),
        ('access_mode', '=', 'members'),
        '&amp;', ('access_mode', '=', 'groups'), ('access_group_id', 'in', [g.id for g in user.groups_id])]</field>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="personal_whatsapp_history" model="ir.rule">
        <field name="name">Personal Whatsapp history</field>
        <field ref="model_whatsapp_history" name="model_id"/>
        <field name="domain_force">[('provider_id','=',user.provider_id.id)]</field>
        <field name="groups" eval="[(4, ref('tus_meta_whatsapp_base.whatsapp_group_user'))]"/>
    </record>

    <record id="personal_whatsapp_history_manager" model="ir.rule">
        <field name="name">Personal Whatsapp history</field>
        <field ref="model_whatsapp_history" name="model_id"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('tus_meta_whatsapp_base.whatsapp_group_manager'))]"/>
    </record>

     <record id="personal_wa_template" model="ir.rule">
        <field name="name">Personal Whatsapp Template</field>
        <field ref="model_wa_template" name="model_id"/>
        <field name="domain_force">[('provider_id','in',user.provider_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('tus_meta_whatsapp_base.whatsapp_group_user'))]"/>
    </record>

    <record id="personal_wa_template_manager" model="ir.rule">
        <field name="name">Personal Whatsapp Template</field>
        <field ref="model_wa_template" name="model_id"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('tus_meta_whatsapp_base.whatsapp_group_manager'))]"/>
    </record>
</odoo>
